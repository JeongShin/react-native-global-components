{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "jsx": "react-native",
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": false,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "packages/v1/**/*.tsx",
    "packages/v1/**/*.d.ts",
    "packages/v1/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
