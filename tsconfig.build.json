{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "outDir": "./lib",
    "lib": ["esnext"],
    "jsx": "react-native",
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": false,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": ["packages/**/*.tsx", "packages/**/*.d.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "src"]
}
