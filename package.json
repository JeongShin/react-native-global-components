{
  "name": "react-native-bottom-sheet-ui",
  "version": "0.4.2",
  "description": "Simple & easy bottom sheet UI",
  "main": "dist/index",
  "module": "dist/index",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint '**/*.{ts,tsx}' --ext .ts,.tsx --fix",
    "typescript": "npx tsc --noemit",
    "release": " npx release-it",
    "build": "yarn typescript && rm -rf dist && npx tsc"
  },
  "author": "JeongShin",
  "repository": "https://github.com/JeongShin/react-native-bottom-sheet-ui",
  "license": "ISC",
  "keywords": [
    "react",
    "react-native",
    "bottom-sheet",
    "reanimated"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/react": "17.0.2",
    "@types/react-native": "^0.66.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "react": "~17.0.2",
    "react-native": "^0.66.3",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-reanimated": "^2.8.0",
    "release-it": "^15.5.1",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.10.1",
    "react-native-reanimated": ">=2.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
