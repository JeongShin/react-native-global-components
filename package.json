{
  "name": "react-native-global-components",
  "version": "0.0.15",
  "description": "react native global components including Snackbar, Popup, BottomSheet",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint '**/*.{ts,tsx}' --ext .ts,.tsx --fix",
    "typescript": "tsc --noemit",
    "patch": "rm -rf lib && yarn build && release-it patch",
    "minor": "rm -rf lib && yarn build && release-it minor",
    "major": "rm -rf lib && yarn build && release-it major",
    "build": "bob build"
  },
  "author": "JeongShin",
  "repository": "https://github.com/JeongShin/react-native-global-components",
  "keywords": [
    "react",
    "react-native",
    "snackbar",
    "popup",
    "bottom-sheet",
    "reanimated"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/react": "17.0.2",
    "@types/react-native": "^0.66.3",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "react": "^17.0.2",
    "react-native": "^0.66.4",
    "react-native-builder-bob": "^0.20.3",
    "react-native-gesture-handler": "^1.10.3",
    "react-native-reanimated": "^2.8.0",
    "release-it": "^15.6.0",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.10.3",
    "react-native-reanimated": ">=2.8.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "copyFlow": true
        }
      ],
      "module",
      "typescript"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "rxjs": "^7.2.0"
  },
  "license": "MIT"
}
